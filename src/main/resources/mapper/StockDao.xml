<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.miaosha.dao.StockDao">

    <resultMap id="BaseResultMap" type="com.example.miaosha.entity.Stock">
        <!--@Table stock-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="remain" column="remain" jdbcType="INTEGER"/>
        <result property="sold" column="sold" jdbcType="INTEGER"/>
        <result property="version" column="version" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, name, remain, sold, version
        from miaosha.stock
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, name, remain, sold, version
        from miaosha.stock
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, name, remain, sold, version
        from miaosha.stock
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="remain != null">
                and remain = #{remain}
            </if>
            <if test="sold != null">
                and sold = #{sold}
            </if>
            <if test="version != null">
                and version = #{version}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into miaosha.stock(name, remain, sold, version)
        values (#{name}, #{remain}, #{sold}, #{version})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update miaosha.stock
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="remain != null">
                remain = #{remain},
            </if>
            <if test="sold != null">
                sold = #{sold},
            </if>
            <if test="version != null">
                version = #{version},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from miaosha.stock where id = #{id}
    </delete>

    <update id="addStackWithOptimisticLock">
        update miaosha.stock
        set remain = remain - 1,
        sold = sold + 1,
        version = version + 1,
        where id = #{id}
        and version = #{version}
    </update>

</mapper>